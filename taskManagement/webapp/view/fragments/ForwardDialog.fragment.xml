<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="forwardDialog"
        title="{i18n>dialog.titleForward}"
        stretchOnPhone="true">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="{i18n>label.selectManager}" required="true" labelFor="managerSelect"/>
                <Select
                    id="managerSelect"
                    width="100%"
                    items="{forwardModel>/managers}">
                    <core:Item
                        key="{forwardModel>userId}"
                        text="{forwardModel>firstName} {forwardModel>lastName} ({forwardModel>department})"/>
                </Select>
            </VBox>
        </content>
        <beginButton>
            <Button text="{i18n>button.forward}" type="Emphasized" press="onForwardConfirm"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>button.cancel}" press="onForwardCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>

